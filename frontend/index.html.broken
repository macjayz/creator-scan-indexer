<!DOCTYPE html>
<html>
<head>
    <title>Creator Coin Indexer</title>
    <style>
        body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; margin: 0; padding: 20px; background: #f8fafc; color: #1e293b; }
        .container { max-width: 1200px; margin: 0 auto; }
        
        .header { 
            text-align: center; 
            margin-bottom: 30px; 
            padding: 30px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            border: 1px solid #e2e8f0;
        }
        
        .header h1 { font-size: 2.5rem; margin: 0 0 10px 0; color: #1e293b; }
        .header p { font-size: 1.1rem; color: #64748b; margin: 0; }
        
        .stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 16px;
            margin-bottom: 24px;
        }
        
        .stat-card {
            background: white;
            padding: 20px;
            border-radius: 12px;
            text-align: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            border: 1px solid #e2e8f0;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        
        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        }
        
        .stat-number { 
            font-size: 2rem; 
            font-weight: 800; 
            color: #3b82f6;
            margin-bottom: 4px;
        }
        
        .stat-label { 
            color: #64748b; 
            font-size: 0.875rem; 
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .controls {
            background: white;
            padding: 24px;
            border-radius: 16px;
            margin-bottom: 24px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            border: 1px solid #e2e8f0;
        }
        
        .search-box { 
            margin-bottom: 16px;
        }
        
        .search-box input { 
            width: 100%; 
            padding: 14px 16px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.2s;
            background: #f8fafc;
        }
        
        .search-box input:focus {
            outline: none;
            border-color: #3b82f6;
            background: white;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }
        
        .filters {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }
        
        .filter-btn {
            padding: 10px 20px;
            border: 2px solid #e2e8f0;
            background: white;
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
            font-size: 0.9rem;
            color: #64748b;
            transition: all 0.2s;
        }
        
        .filter-btn:hover {
            border-color: #cbd5e1;
            color: #475569;
        }
        
        .filter-btn.active {
            background: #3b82f6;
            color: white;
            border-color: #3b82f6;
        }
        
        .filter-btn.active.zora { background: #6366f1; border-color: #6366f1; }
        .filter-btn.active.clanker { background: #10b981; border-color: #10b981; }
        .filter-btn.active.dex { background: #f59e0b; border-color: #f59e0b; }
        
        .load-more {
            text-align: center;
            margin: 30px 0;
        }
        
        .load-more-btn {
            padding: 12px 28px;
            background: linear-gradient(135deg, #3b82f6, #6366f1);
            color: white;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.2s;
        }
        
        .load-more-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(59, 130, 246, 0.3);
        }
        
        .tokens-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }
        
        .token-card {
            background: white;
            border-radius: 16px;
            padding: 24px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            border: 1px solid #e2e8f0;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }
        
        .token-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 32px rgba(0,0,0,0.1);
            border-color: #cbd5e1;
        }
        
        .token-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: #3b82f6;
        }
        
        .token-card.zora::before { background: #6366f1; }
        .token-card.clanker::before { background: #10b981; }
        .token-card.dex_uniswap_v3::before { background: #f59e0b; }
        
        .token-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 16px;
        }
        
        .token-main {
            flex: 1;
        }
        
        .token-symbol { 
            font-weight: 800; 
            font-size: 1.5rem;
            color: #1e293b;
            margin: 0 0 4px 0;
            line-height: 1.2;
        }
        
        .token-name { 
            color: #64748b; 
            font-size: 0.95rem;
            line-height: 1.4;
            margin: 0;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        .token-badges {
            display: flex;
            flex-direction: column;
            gap: 8px;
            align-items: flex-end;
        }
        
        .platform-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            background: #e0e7ff;
            color: #4f46e5;
        }
        
        .platform-badge.zora { background: #e0e7ff; color: #4f46e5; }
        .platform-badge.clanker { background: #d1fae5; color: #059669; }
        .platform-badge.dex_uniswap_v3 { background: #fef3c7; color: #d97706; }
        
        .deploy-method {
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 0.7rem;
            font-weight: 600;
            background: #f1f5f9;
            color: #64748b;
            white-space: nowrap;
        }
        
        .deploy-method.Base App { background: #dbeafe; color: #1d4ed8; }
        .deploy-method.user { background: #f0fdf4; color: #166534; }
        
        .token-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 16px;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #f1f5f9;
        }
        
        .detail-item {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }
        
        .detail-label {
            color: #94a3b8;
            font-size: 0.7rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .detail-value {
            color: #1e293b;
            font-family: 'SF Mono', 'Monaco', 'Courier New', monospace;
            font-size: 0.85rem;
            font-weight: 500;
            word-break: break-all;
        }
        
        .factory-info {
            margin-top: 16px;
            padding: 12px;
            background: #f8fafc;
            border-radius: 12px;
            font-size: 0.85rem;
            color: #475569;
            border-left: 3px solid #cbd5e1;
        }
        
        .factory-info strong {
            color: #1e293b;
        }
        
        .loading, .error, .no-tokens {
            text-align: center;
            padding: 60px 20px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            margin: 20px 0;
            border: 1px solid #e2e8f0;
        }
        
        .loading {
            color: #64748b;
            font-size: 1.1rem;
        }
        
        .error { 
            color: #dc2626;
            background: #fef2f2;
            border-color: #fecaca;
        }
        
        .no-tokens { 
            color: #64748b;
            background: #f8fafc;
        }
        
        @media (max-width: 768px) {
            .tokens-grid {
                grid-template-columns: 1fr;
            }
            
            .stats {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .header {
                padding: 20px;
            }
            
            .header h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üîç Creator Coin Indexer</h1>
            <p>Discover and track creator coins on Base Network</p>
        </div>
        
        <div class="stats">
            <div class="stat-card">
                <div class="stat-number" id="total-tokens">0</div>
                <div class="stat-label">Total Tokens</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="zora-count">0</div>
                <div class="stat-label">Zora Tokens</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="clanker-count">0</div>
                <div class="stat-label">Clanker Tokens</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="dex-count">0</div>
                <div class="stat-label">DEX Tokens</div>
            </div>
        </div>
        
        <div class="controls">
            <div class="search-box">
                <input type="text" id="search" placeholder="Search tokens by name or symbol...">
            </div>
            <div class="filters">
                <button class="filter-btn active" data-platform="all">All Tokens</button>
                <button class="filter-btn" data-platform="zora">Zora</button>
                <button class="filter-btn" data-platform="clanker">Clanker</button>
                <button class="filter-btn" data-platform="dex">DEX</button>
            </div>
        </div>
        
        <div id="loading" class="loading">
            <div style="font-size: 2rem; margin-bottom: 10px;">‚è≥</div>
            Loading tokens...
        </div>
        
        <div id="error" class="error" style="display:none;">
            <div style="font-size: 2rem; margin-bottom: 10px;">‚ùå</div>
            Failed to load tokens
        </div>
        
        <div id="no-tokens" class="no-tokens" style="display:none;">
            <div style="font-size: 2rem; margin-bottom: 10px;">üì≠</div>
            No tokens found
        </div>
        
        <div class="tokens-grid" id="tokens"></div>
        
        <div class="load-more" id="load-more" style="display:none;">
            <button class="load-more-btn" id="load-more-btn">
                ‚¨áÔ∏è Load More Tokens
            </button>
        </div>
    </div>

    <script>
        let allTokens = [];
        let currentFilter = 'all';
        let searchTerm = '';
        let loadedCount = 0;
        const tokensPerLoad = 500;
        
        // Known high-volume Base Apps/bundlers
        const highVolumeBase Apps = {
            '0x4b5c33c3c7a31bd108f5a99b64683b0056a62226': true,
            '0xbdbebd58cc8153ce74530bb342427579315915b2': true,
            '0x54e2acab04c89a3fe02852bf8dd69ee8f526bc75': true,
            '0xaf2bfb6b69dfe6efd257fe8cd694175156a23812': true
        };
        
        async function loadStats() {
            try {
                const statsRes = await fetch('http://localhost:3001/api/stats');
                const stats = await statsRes.json();
                updateStats(stats);
                return stats.total;
            } catch (error) {
                console.error('Error loading stats:', error);
                return 0;
            }
        }
        
        async function loadTokens(offset = 0) {
            try {
                showLoading();
                
                const totalTokens = await loadStats();
                const response = await fetch(`http://localhost:3001/api/tokens?limit=${tokensPerLoad}&offset=${offset}`);
                const data = await response.json();
                
                allTokens = [...allTokens, ...(data.tokens || [])];
                loadedCount = allTokens.length;
                
                displayTokens();
                
                const loadMoreBtn = document.getElementById('load-more');
                if (loadedCount < totalTokens) {
                    loadMoreBtn.style.display = 'block';
                } else {
                    loadMoreBtn.style.display = 'none';
                }
                
                hideLoading();
                
            } catch (error) {
                console.error('Error:', error);
                showError('Failed to load tokens');
            }
        }
        
        function updateStats(stats) {
            document.getElementById('total-tokens').textContent = stats.total.toLocaleString();
            
            const zora = stats.platforms.find(p => p.platform === 'zora')?.count || '0';
            const clanker = stats.platforms.find(p => p.platform === 'clanker')?.count || '0';
            const dex = stats.platforms.filter(p => p.platform.includes('dex'))
                         .reduce((sum, p) => sum + parseInt(p.count), 0);
            
            document.getElementById('zora-count').textContent = parseInt(zora).toLocaleString();
            document.getElementById('clanker-count').textContent = parseInt(clanker).toLocaleString();
            document.getElementById('dex-count').textContent = parseInt(dex).toLocaleString();
        }
        
        function displayTokens() {
            let filtered = allTokens;
            
            if (currentFilter !== 'all') {
                if (currentFilter === 'dex') {
                    filtered = filtered.filter(t => t.platform && t.platform.toLowerCase().includes('dex'));
                } else if (currentFilter === 'clanker') {
                    filtered = filtered.filter(t => t.platform && t.platform.toLowerCase().includes('clanker'));
                } else {
                    filtered = filtered.filter(t => t.platform && t.platform.toLowerCase() === currentFilter.toLowerCase());
                }
            }
            
            if (searchTerm) {
                const term = searchTerm.toLowerCase();
                filtered = filtered.filter(t => 
                    (t.name && t.name.toLowerCase().includes(term)) ||
                    (t.symbol && t.symbol.toLowerCase().includes(term))
                );
            }
            
            const container = document.getElementById('tokens');
            const noTokens = document.getElementById('no-tokens');
            
            if (filtered.length === 0) {
                container.innerHTML = '';
                noTokens.style.display = 'block';
                return;
            }
            
            noTokens.style.display = 'none';
            
            container.innerHTML = filtered.map(token => {
                const platform = token.platform?.toLowerCase() || '';
                const isBase App = token.ui_deployer && highVolumeBase Apps[token.ui_deployer.toLowerCase()];
                const deployMethod = isBase App ? 'Base App' : (token.ui_deployer ? 'user' : 'unknown');
                
                return `
                <div class="token-card ${platform}">
                    <div class="token-header">
                        <div class="token-main">
                            <div class="token-symbol">${escapeHtml(token.symbol || 'No Symbol')}</div>
                            <div class="token-name">${escapeHtml(token.name || 'Unnamed Token')}</div>
                        </div>
                        <div class="token-badges">
                            <div class="platform-badge ${platform}">${getPlatformName(token.platform)}</div>
                            ${token.ui_deployer && token.ui_deployer !== '0x0000000000000000000000000000000000000000' ? 
                                `<div class="deploy-method ${deployMethod}">${getDeployMethodLabel(deployMethod)}</div>` : 
                                ''
                            }
                        </div>
                    </div>
                    
                    <div class="token-details">
                        <div class="detail-item">
                            <div class="detail-label">Token Address</div>
                            <div class="detail-value">${token.address?.substring(0, 10)}...</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Creator</div>
                            <div class="detail-value">${token.creator_address?.substring(0, 10)}...</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Created</div>
                            <div class="detail-value">${formatTime(token.detection_timestamp)}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-label">Supply</div>
                            <div class="detail-value">${formatSupply(token.total_supply)}</div>
                        </div>
                    </div>
                    
                    ${getFactoryInfo(token.factory_address, token.ui_deployer)}
                </div>
                `;
            }).join('');
        }
        
        function getPlatformName(platform) {
            if (!platform) return 'Unknown';
            const names = {
                'zora': 'Zora',
                'clanker': 'Clanker',
                'dex_uniswap_v3': 'Uniswap V3'
            };
            return names[platform.toLowerCase()] || platform;
        }
        
        function getDeployMethodLabel(method) {
            const labels = {
                'Base App': 'via Base App',
                'user': 'Direct',
                'unknown': 'Unknown'
            };
            return labels[method] || method;
        }
        
        function getFactoryInfo(factoryAddress, uiDeployer) {
            if (!factoryAddress) return '';
            
            const factories = {
                '0x777777751622c0d3258f214f9df38e35bf45baf3': 'Zora Factory',
                '0x2a787b2362021cc3eea3c24c4748a6cd5b687382': 'Clanker Factory',
                '0x33128a8fc17869897dce68ed026d694621f6fdfd': 'Uniswap V3 Factory'
            };
            
            const addr = factoryAddress.toLowerCase();
            const factoryName = factories[addr] || 'Custom Factory';
            
            const isBase App = uiDeployer && highVolumeBase Apps[uiDeployer.toLowerCase()];
            
            let info = `<strong>${factoryName}</strong>`;
            if (isBase App) {
                info += ` ‚Ä¢ Deployed via Base App service`;
            } else if (uiDeployer && uiDeployer !== '0x0000000000000000000000000000000000000000') {
                info += ` ‚Ä¢ Direct deployment`;
            }
            
            return `<div class="factory-info">${info}</div>`;
        }
        
        function formatSupply(supply) {
            if (!supply || supply === '0') return '0';
            try {
                const num = BigInt(supply);
                if (num > 10n ** 18n) {
                    const formatted = (Number(num / 10n ** 18n)).toLocaleString();
                    return formatted.includes('.') ? formatted : formatted + ' tokens';
                }
                return supply;
            } catch {
                return supply;
            }
        }
        
        function formatTime(timestamp) {
            if (!timestamp) return 'Unknown';
            const date = new Date(timestamp);
            const now = new Date();
            const diff = now - date;
            const mins = Math.floor(diff / 60000);
            
            if (mins < 1) return 'just now';
            if (mins < 60) return `${mins}m ago`;
            if (mins < 1440) return `${Math.floor(mins / 60)}h ago`;
            return `${Math.floor(mins / 1440)}d ago`;
        }
        
        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        function showLoading() {
            document.getElementById('loading').style.display = 'block';
            document.getElementById('error').style.display = 'none';
            document.getElementById('no-tokens').style.display = 'none';
        }
        
        function hideLoading() {
            document.getElementById('loading').style.display = 'none';
        }
        
        function showError(msg) {
            document.getElementById('loading').style.display = 'none';
            document.getElementById('error').style.display = 'block';
            document.getElementById('error').textContent = msg;
        }
        
        // Event listeners
        document.addEventListener('DOMContentLoaded', () => loadTokens(0));
        
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.filter-btn').forEach(b => {
                    b.classList.remove('active');
                    b.classList.remove('zora', 'clanker', 'dex');
                });
                this.classList.add('active');
                if (this.dataset.platform !== 'all') {
                    this.classList.add(this.dataset.platform);
                }
                currentFilter = this.dataset.platform;
                displayTokens();
            });
        });
        
        document.getElementById('search').addEventListener('input', function(e) {
            searchTerm = e.target.value;
            displayTokens();
        });
        
        document.getElementById('load-more-btn').addEventListener('click', function() {
            loadTokens(loadedCount);
        });
        
        setInterval(loadStats, 30000);
    </script>
</body>
</html>
